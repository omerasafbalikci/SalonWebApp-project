<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SalonWebApp (Admin)</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        .min-vh-100 {
            min-height: 100vh;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="IndexAdmin">Admin Paneli</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdmin"
                        aria-controls="navbarAdmin" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarAdmin">
                    <ul class="navbar-nav me-auto">
                        <!-- Admin Menüsü -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Salons" asp-action="Index">Salon Yönetimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employees" asp-action="Index">Çalışan Yönetimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">Servis Yönetimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Users" asp-action="Index">Kullanıcı Yönetimi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="WorkingDays" asp-action="Index">Çalışma Günleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Times" asp-action="Index">Zaman Dilimleri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="EmployeeServices" asp-action="Index">Çalışan-Servis İlişkisi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointments" asp-action="Index">Randevular</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Logout">Çıkış</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Body content -->
    <main class="container flex-fill">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center mt-auto p-3">
        © 2024 SalonWebApp - Admin Paneli
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
