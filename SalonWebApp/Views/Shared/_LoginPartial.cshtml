@inject IHttpContextAccessor HttpContextAccessor

@{
    bool isLoggedIn = HttpContextAccessor.HttpContext.Session.GetString("UserId") != null;
    string? userName = HttpContextAccessor.HttpContext.Session.GetString("UserEmail");
}

<ul class="navbar-nav">
    @if (isLoggedIn)
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Merhaba @userName!</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Users" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-light">
                    Çıkış Yap
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Users" asp-action="CreateMember">Kayıt Ol</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Users" asp-action="Login">Giriş Yap</a>
        </li>
    }
</ul>
