@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .nav-link.custom-nav-login {
        background: blue;
        color: white;
        border-radius: 5px;
    }

    .nav-link.custom-nav-login:hover {
            background: white;
            color: blue;
    }

    .nav-link.custom-nav-register {
        color: white;
    }

    .nav-link.custom-nav-register:hover {
        color: blue;
    }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Çıkış Yap</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link custom-nav-register" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    </li>
    <li class="nav-item">
        <a class="nav-link custom-nav-login" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
}
</ul>
