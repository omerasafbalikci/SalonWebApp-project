@model SalonWebApp.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kullanıcı Detayı";
}

<h2>Kullanıcı Detayı</h2>
<hr />
<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName (@Model.Role)</h4>
        <p>
            <strong>Email:</strong> @Model.Email <br />
            <strong>Telefon:</strong> @Model.PhoneNumber <br />
            <strong>Cinsiyet:</strong> @Model.Gender <br />
        </p>

        @if (Model.Appointments != null && Model.Appointments.Any())
        {
            <h5>Aldığı Randevular</h5>
            <ul>
                @foreach (var app in Model.Appointments)
                {
                    <li>Randevu ID: @app.AppointmentId, Salon: @app.Salon?.Name, Servis: @app.Service?.Name</li>
                }
            </ul>
        }
        else
        {
            <p>Henüz randevu kaydı bulunmuyor.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Düzenle</a>
    <a asp-action="Delete" asp-route-id="@Model.UserId" class="btn btn-danger ms-2">Sil</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
</div>
