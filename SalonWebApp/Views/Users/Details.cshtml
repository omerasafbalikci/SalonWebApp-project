@model SalonWebApp.Models.User

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Kullanıcı Detayı";
}

<h2 class="text-center text-primary mb-4">Kullanıcı Detayı</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-body">
            <h4 class="card-title text-center text-primary">
                @Model.FirstName @Model.LastName
                <small class="text-muted">(@Model.Role)</small>
            </h4>
            <hr />

            <table class="table table-borderless table-sm">
                <tbody>
                    <tr>
                        <th class="text-end">Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th class="text-end">Telefon:</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th class="text-end">Cinsiyet:</th>
                        <td>@Model.Gender</td>
                    </tr>
                </tbody>
            </table>

            <hr />

            @if (Model.Appointments != null && Model.Appointments.Any())
            {
                <h5 class="text-center text-primary">Aldığı Randevular</h5>
                <ul class="list-group">
                    @foreach (var app in Model.Appointments)
                    {
                        <li class="list-group-item">
                            <strong>Randevu ID:</strong> @app.AppointmentId <br />
                            <strong>Salon:</strong> @app.Salon?.Name <br />
                            <strong>Servis:</strong> @app.Service?.Name
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-center text-muted">Henüz randevu kaydı bulunmuyor.</p>
            }
        </div>
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning btn-sm me-2">
        <i class="bi bi-pencil-square"></i> Düzenle
    </a>
    <a asp-action="Delete" asp-route-id="@Model.UserId" class="btn btn-danger btn-sm me-2">
        <i class="bi bi-trash-fill"></i> Sil
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="bi bi-arrow-left-circle"></i> Geri
    </a>
</div>
