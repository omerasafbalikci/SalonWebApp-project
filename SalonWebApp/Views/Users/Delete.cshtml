@model SalonWebApp.Models.User

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kullanıcı Sil";
}

<h2>Kullanıcı Sil</h2>
<hr />

<div class="alert alert-danger">
    <strong>@Model.FirstName @Model.LastName</strong> adlı kullanıcıyı silmek istediğinizden emin misiniz?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
</form>
