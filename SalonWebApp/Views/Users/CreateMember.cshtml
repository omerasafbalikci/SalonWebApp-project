@model SalonWebApp.Models.CreateUser

@{
    Layout = User.IsInRole(Roles.ADMIN.ToString())
        ? "~/Views/Shared/_LayoutAdmin.cshtml"
        : "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Üye Ol";
}

<h2 class="text-center mb-4">Üye Ol</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 28rem;">
        <div class="card-body">
            <form asp-action="CreateMember">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">Ad</label>
                    <input asp-for="FirstName" class="form-control form-control-sm" placeholder="Adınızı girin" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Soyad</label>
                    <input asp-for="LastName" class="form-control form-control-sm" placeholder="Soyadınızı girin" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Parola</label>
                    <input asp-for="Password" type="password" class="form-control form-control-sm" placeholder="Parola oluşturun" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Parola (Tekrar)</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" placeholder="Parolanızı tekrar girin" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Email adresinizi girin" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control form-control-sm" placeholder="Telefon numaranızı girin" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label">Cinsiyet</label>
                    <select asp-for="Gender" class="form-select form-select-sm">
                        <option value="MALE">Erkek</option>
                        <option value="FEMALE">Kadın</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary btn-sm">Kayıt Ol</button>
                    <a asp-action="Login" class="btn btn-secondary btn-sm">Giriş</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
