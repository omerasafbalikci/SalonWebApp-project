@model SalonWebApp.Models.CreateUser

@{
    Layout = User.IsInRole("Admin")
        ? "~/Views/Shared/_LayoutAdmin.cshtml"
        : "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Üye Ol";
}

<h2>Üye Ol</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateMember">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Parola</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Parola (Tekrar)</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Cinsiyet</label>
                <select asp-for="Gender" class="form-select">
                    <option value="MALE">Erkek</option>
                    <option value="FEMALE">Kadın</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            <a asp-action="Login" class="btn btn-secondary ms-2">Giriş</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
