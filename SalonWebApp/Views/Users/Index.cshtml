@model IEnumerable<SalonWebApp.Models.User>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h2 class="text-center">Kullanıcı Listesi</h2>
<hr />

<div class="table-responsive">
    <table class="table table-sm table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>Cinsiyet</th>
                <th>Rol</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Gender</td>
                    <td>@user.Role</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-info btn-sm me-1">Detay</a>
                            <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-warning btn-sm me-1">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-action="CreateAdmin" class="btn btn-primary">Yeni Admin Oluştur</a>
</div>
