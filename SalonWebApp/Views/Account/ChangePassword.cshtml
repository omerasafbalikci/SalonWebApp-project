@model SalonWebApp.Models.ChangePasswordModel

<h1>Şifre Değiştir</h1>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-aS5V10t7LlC+4Z1FhP34dSvTGxuLFO2T0br+V5w2auI1cLi1fktwx6PAv9n+nbt3" crossorigin="anonymous" />
<link rel="stylesheet" href="~/lib/fontawesome-free-5.15.3/css/all.min.css" />

<form asp-action="ChangePassword" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="form-group">
        <label asp-for="OldPassword"></label>
        <div class="input-group">
            <input asp-for="OldPassword" class="form-control" />

        </div>
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <div class="input-group">
            <input asp-for="NewPassword" class="form-control" type="password" />
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary btn-show-password" onclick="togglePassword('YeniSifre')">
                    Göster
                </button>
            </span>
        </div>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmNewPassword"></label>
        <div class="input-group">
            <input asp-for="ConfirmNewPassword" class="form-control" type="password" />
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary btn-show-password" onclick="togglePassword('YeniSifreTekrar')">
                    Göster
                </button>
            </span>
        </div>
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
</form>

@section Scripts {
    <script>
        function togglePassword(inputId) {
            var passwordInput = $('#' + inputId);
            var isPasswordShown = passwordInput.attr('type') === 'text';

            if (isPasswordShown) {
                passwordInput.attr('type', 'password');
            } else {
                passwordInput.attr('type', 'text');
            }
        }
    </script>
}
