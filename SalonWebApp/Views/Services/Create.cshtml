@model SalonWebApp.Models.Service

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Yeni Servis Ekle";
}

<h2>Yeni Servis Ekle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Servis Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Fiyat</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duration" class="form-label">Süre</label>
                <input asp-for="Duration" class="form-control" placeholder="00:30:00" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SalonId" class="form-label">Salon</label>
                <select asp-for="SalonId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Salons, "SalonId", "Name"))">
                </select>
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
