@model SalonWebApp.Models.Service

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Yeni Servis Ekle";
}

<h2 class="text-center">Yeni Servis Ekle</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 40%; min-width: 350px;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Servis Adı</label>
                    <input asp-for="Name" class="form-control form-control-sm" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Fiyat</label>
                    <input asp-for="Price" class="form-control form-control-sm" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Duration" class="form-label">Süre</label>
                    <input asp-for="Duration" class="form-control form-control-sm" placeholder="00:30:00" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SalonId" class="form-label">Salon</label>
                    <select asp-for="SalonId" class="form-select form-select-sm"
                            asp-items="@(new SelectList(ViewBag.Salons, "SalonId", "Name"))">
                    </select>
                    <span asp-validation-for="SalonId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check-circle"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> Geri
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
