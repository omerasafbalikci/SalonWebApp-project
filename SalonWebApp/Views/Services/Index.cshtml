@model IEnumerable<SalonWebApp.Models.Service>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Servis Listesi";
}

<h2>Servis Listesi</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Servis Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Servis Adı</th>
            <th>Fiyat</th>
            <th>Süre</th>
            <th>Salon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price</td>
                <td>@service.Duration</td>
                <td>@service.Salon?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@service.ServiceId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@service.ServiceId" class="btn btn-warning btn-sm ms-1">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@service.ServiceId" class="btn btn-danger btn-sm ms-1">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
