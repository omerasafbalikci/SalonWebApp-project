@model SalonWebApp.Models.Service

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Servis Düzenle";
}

<h2>Servis Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ServiceId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Servis Adı</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Fiyat</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Duration" class="form-label">Süre</label>
                <input asp-for="Duration" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="SalonId" class="form-label">Salon</label>
                <select asp-for="SalonId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Salons, "SalonId", "Name", Model.SalonId))">
                </select>
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
