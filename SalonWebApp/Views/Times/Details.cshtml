@model SalonWebApp.Models.Time

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Zaman Detayı";
}

<h2>Zaman Dilimi Detayı</h2>
<hr />

<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            @Model.Date.ToShortDateString() [@Model.StartTime - @Model.EndTime]
        </h4>
        <p class="card-text">
            <strong>Seçilebilir:</strong> @(Model.Selectable ? "Evet" : "Hayır")
        </p>
        @if (Model.Appointments != null && Model.Appointments.Any())
        {
            <h5>Bu zaman dilimine alınan randevular</h5>
            <ul>
                @foreach (var app in Model.Appointments)
                {
                    <li>
                        RandevuID: @app.AppointmentId, Kullanıcı: @app.User?.Email, Servis: @app.Service?.Name
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Bu zaman dilimi için henüz randevu bulunmuyor.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.TimeId" class="btn btn-warning">Düzenle</a>
    <a asp-action="Delete" asp-route-id="@Model.TimeId" class="btn btn-danger ms-2">Sil</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Liste</a>
</div>
