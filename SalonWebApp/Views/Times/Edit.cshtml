@model SalonWebApp.Models.Time

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Zaman Dilimi Düzenle";
}

<h2>Zaman Dilimi Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimeId" />

            <div class="mb-3">
                <label asp-for="Date" class="form-label">Tarih</label>
                <input asp-for="Date" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="StartTime" class="form-label">Başlangıç Saati</label>
                <input asp-for="StartTime" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="EndTime" class="form-label">Bitiş Saati</label>
                <input asp-for="EndTime" class="form-control" />
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Selectable" />
                <label class="form-check-label" asp-for="Selectable">Seçilebilir</label>
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
