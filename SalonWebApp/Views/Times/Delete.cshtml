@model SalonWebApp.Models.Time

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Zaman Dilimi Sil";
}

<h2>Zaman Dilimi Sil</h2>
<hr />

<div class="alert alert-danger">
    <strong>@Model.Date.ToShortDateString() [@Model.StartTime - @Model.EndTime]</strong> zaman dilimini silmek istediğinizden emin misiniz?
    @if (Model.Appointments != null && Model.Appointments.Any())
    {
        <p class="mt-2">
            Bu zaman dilimine bağlı randevular bulunmaktadır.
            Silmek randevuları etkileyebilir (veya DB kısıtlamasına göre hata olabilir).
        </p>
    }
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="TimeId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>
