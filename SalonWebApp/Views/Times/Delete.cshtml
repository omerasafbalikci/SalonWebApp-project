@model SalonWebApp.Models.Time

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Zaman Dilimi Sil";
}

<h2 class="text-center text-danger">Zaman Dilimi Sil</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card shadow-lg border-danger" style="width: 40%; min-width: 350px;">
        <div class="card-body text-center">
            <h4 class="text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> Dikkat!
            </h4>
            <p class="card-text mt-3">
                <strong>@Model.Date.ToShortDateString() [@Model.StartTime - @Model.EndTime]</strong> zaman dilimini silmek üzeresiniz. Bu işlem geri alınamaz!
            </p>
            @if (Model.Appointments != null && Model.Appointments.Any())
            {
                <p class="text-warning mt-3">
                    <i class="bi bi-info-circle"></i> Bu zaman dilimine bağlı randevular bulunmaktadır.
                    Silme işlemi randevuları etkileyebilir veya veritabanı kısıtlamalarına göre hata oluşabilir.
                </p>
            }
        </div>
    </div>
</div>

<form asp-action="Delete" class="d-flex justify-content-center mt-4">
    <input type="hidden" asp-for="TimeId" />
    <button type="submit" class="btn btn-danger btn-sm me-2">
        <i class="bi bi-trash-fill"></i> Sil
    </button>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="bi bi-arrow-left-circle"></i> İptal
    </a>
</form>
