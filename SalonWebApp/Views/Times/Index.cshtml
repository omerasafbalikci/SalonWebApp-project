@model IEnumerable<SalonWebApp.Models.Time>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Zaman Dilimleri";
}

<h2 class="text-center">Zaman Dilimleri</h2>
<hr />

<div class="table-responsive">
    <table class="table table-sm table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Tarih</th>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th>Seçilebilir mi?</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.StartTime</td>
                    <td>@item.EndTime</td>
                    <td>@(item.Selectable ? "Evet" : "Hayır")</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Details" asp-route-id="@item.TimeId" class="btn btn-info btn-sm me-1">Detay</a>
                            <a asp-action="Edit" asp-route-id="@item.TimeId" class="btn btn-warning btn-sm me-1">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.TimeId" class="btn btn-danger btn-sm">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-action="Create" class="btn btn-primary">Yeni Zaman Dilimi Ekle</a>
</div>
