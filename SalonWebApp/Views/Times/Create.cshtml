@model SalonWebApp.Models.Time

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Zaman Dilimi Ekle";
}

<h2>Yeni Zaman Dilimi Ekle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label">Tarih</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartTime" class="form-label">Başlangıç Saati</label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndTime" class="form-label">Bitiş Saati</label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Selectable" />
                <label class="form-check-label" asp-for="Selectable">Seçilebilir</label>
                <span asp-validation-for="Selectable" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.PartialAsync("_ValidationScriptsPartial");
    }
}
