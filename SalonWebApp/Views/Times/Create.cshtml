@model SalonWebApp.Models.Time

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Zaman Dilimi Ekle";
}

<h2 class="text-center">Yeni Zaman Dilimi Ekle</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 40%; min-width: 350px;">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label">Tarih</label>
                    <input asp-for="Date" class="form-control form-control-sm" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartTime" class="form-label">Başlangıç Saati</label>
                    <input asp-for="StartTime" class="form-control form-control-sm" type="time" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndTime" class="form-label">Bitiş Saati</label>
                    <input asp-for="EndTime" class="form-control form-control-sm" type="time" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Selectable" />
                    <label class="form-check-label" asp-for="Selectable">Seçilebilir</label>
                    <span asp-validation-for="Selectable" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check-circle"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
