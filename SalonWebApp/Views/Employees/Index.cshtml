@model IEnumerable<SalonWebApp.Models.Employee>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışan Listesi";
}

<h2 class="text-center">Çalışan Listesi</h2>
<hr />

<div class="table-responsive">
    <table class="table table-sm table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Maaş</th>
                <th>Telefon</th>
                <th>Salon</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>@string.Format("{0:C}", emp.Salary)</td>
                    <td>@emp.Phone</td>
                    <td>@emp.Salon?.Name</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Details" asp-route-id="@emp.EmployeeId" class="btn btn-info btn-sm me-1">Detay</a>
                            <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-warning btn-sm me-1">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@emp.EmployeeId" class="btn btn-danger btn-sm">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-3">
    <a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>
</div>
