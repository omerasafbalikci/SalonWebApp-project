@model IEnumerable<SalonWebApp.Models.Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Çalışan Listesi";
}

<h2>Çalışan Listesi</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Maaş</th>
            <th>Telefon</th>
            <th>Salon</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Salary</td>
                <td>@emp.Phone</td>
                <td>@emp.Salon?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.EmployeeId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-warning btn-sm ms-1">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@emp.EmployeeId" class="btn btn-danger btn-sm ms-1">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
