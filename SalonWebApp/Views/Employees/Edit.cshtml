@model SalonWebApp.Models.Employee

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Çalışan Düzenle";
}

<h2>Çalışan Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Salary" class="form-label">Maaş</label>
                <input asp-for="Salary" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="SalonId" class="form-label">Bağlı Olduğu Salon</label>
                <select asp-for="SalonId" class="form-select" asp-items="@(new SelectList(ViewBag.Salons, "SalonId", "Name", Model.SalonId))"></select>
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
        </form>
    </div>
</div>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
