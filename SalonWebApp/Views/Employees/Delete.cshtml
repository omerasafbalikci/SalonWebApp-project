@model SalonWebApp.Models.Employee

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışan Sil";
}

<h2>Çalışan Sil</h2>
<hr />

<div class="alert alert-danger">
    <strong>@Model.FirstName @Model.LastName</strong> adlı çalışanı silmek istediğinizden emin misiniz?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
</form>
