@model SalonWebApp.Models.EmployeeService

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "İlişki Düzenle";
}

<h2>Çalışan - Servis İlişkisi Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeServiceId" />

            <div class="mb-3">
                <label asp-for="EmployeeId" class="form-label">Çalışan</label>
                <select asp-for="EmployeeId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "FirstName", Model.EmployeeId))">
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ServiceId" class="form-label">Servis</label>
                <select asp-for="ServiceId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Services, "ServiceId", "Name", Model.ServiceId))">
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
