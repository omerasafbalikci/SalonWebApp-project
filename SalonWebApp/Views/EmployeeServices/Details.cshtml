@model SalonWebApp.Models.EmployeeService

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışan - Servis Detayı";
}

<h2 class="text-center">Çalışan - Servis İlişkisi Detayı</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 40%; min-width: 350px;">
        <div class="card-body">
            <h4 class="card-title text-primary">
                Çalışan: @Model.Employee?.FirstName @Model.Employee?.LastName
            </h4>
            <p class="card-text mt-3">
                <strong>Servis:</strong> @Model.Service?.Name
            </p>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model.EmployeeServiceId" class="btn btn-warning btn-sm me-2">
        <i class="bi bi-pencil-square"></i> Düzenle
    </a>
    <a asp-action="Delete" asp-route-id="@Model.EmployeeServiceId" class="btn btn-danger btn-sm me-2">
        <i class="bi bi-trash-fill"></i> Sil
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="bi bi-arrow-left-circle"></i> Geri
    </a>
</div>
