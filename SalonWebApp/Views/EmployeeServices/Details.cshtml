@model SalonWebApp.Models.EmployeeService

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışan - Servis Detayı";
}

<h2>Çalışan - Servis İlişkisi Detayı</h2>
<hr />

<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            Çalışan: @Model.Employee?.FirstName @Model.Employee?.LastName
        </h4>
        <p class="card-text">
            <strong>Servis:</strong> @Model.Service?.Name
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.EmployeeServiceId" class="btn btn-warning">Düzenle</a>
    <a asp-action="Delete" asp-route-id="@Model.EmployeeServiceId" class="btn btn-danger ms-2">Sil</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
</div>
