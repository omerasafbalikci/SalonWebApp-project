@model SalonWebApp.Models.EmployeeService

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "İlişki Sil";
}

<h2>Çalışan - Servis İlişkisi Sil</h2>
<hr />

<div class="alert alert-danger">
    <strong>@Model.Employee?.FirstName @Model.Employee?.LastName</strong> -
    <strong>@Model.Service?.Name</strong> ilişkisini silmek istediğinizden emin misiniz?
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="EmployeeServiceId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
</form>
