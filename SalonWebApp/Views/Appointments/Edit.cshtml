@model SalonWebApp.Models.Appointment

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Randevu Düzenle";
}

<h2 class="text-center text-primary mb-4">Randevu Düzenle</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 30rem;">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="alert alert-danger"></div>
                <input type="hidden" asp-for="AppointmentId" />

                <!-- Salon -->
                <div class="mb-3">
                    <label asp-for="SalonId" class="form-label">Salon</label>
                    <select asp-for="SalonId" class="form-select form-select-sm" asp-items="ViewBag.Salons"></select>
                    <span asp-validation-for="SalonId" class="text-danger"></span>
                </div>

                <!-- Servis -->
                <div class="mb-3">
                    <label asp-for="ServiceId" class="form-label">Servis</label>
                    <select asp-for="ServiceId" class="form-select form-select-sm" asp-items="ViewBag.Services"></select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <!-- Çalışan -->
                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label">Çalışan</label>
                    <select asp-for="EmployeeId" class="form-select form-select-sm" asp-items="ViewBag.Employees"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <!-- Zaman Dilimi -->
                <div class="mb-3">
                    <label asp-for="TimeId" class="form-label">Zaman Dilimi</label>
                    <select asp-for="TimeId" class="form-select form-select-sm" asp-items="ViewBag.Times"></select>
                    <span asp-validation-for="TimeId" class="text-danger"></span>
                </div>

                <!-- Açıklama -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <input asp-for="Description" class="form-control form-control-sm" placeholder="Randevu ile ilgili açıklama girin" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Butonlar -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="bi bi-check-circle"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
