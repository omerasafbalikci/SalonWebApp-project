@model SalonWebApp.Models.Appointment

@{
    Layout = User.IsInRole("Admin")
    ? "~/Views/Shared/_LayoutAdmin.cshtml"
    : "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Randevu Detayı";
}

<h2>Randevu Detayı</h2>
<hr />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Service?.Name</h5>
        <p class="card-text">
            <strong>Kullanıcı:</strong> @Model.User?.Email <br />
            <strong>Salon:</strong> @Model.Salon?.Name <br />
            <strong>Çalışan:</strong> @Model.Employee?.FirstName @Model.Employee?.LastName <br />
            <strong>Tarih/Saat:</strong> @Model.Time?.Date.ToShortDateString() [@Model.Time?.StartTime - @Model.Time?.EndTime] <br />
            <strong>Açıklama:</strong> @Model.Description
        </p>
    </div>
</div>

<div class="mt-3">
    @if (User.IsInRole("ADMIN"))
    {
        <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-warning">Düzenle</a>
        <a asp-action="Delete" asp-route-id="@Model.AppointmentId" class="btn btn-danger ms-2">Sil</a>
        <span class="mx-2"> | </span>
    }
    <a asp-action="Index" class="btn btn-secondary">Randevular</a>
</div>
