@model SalonWebApp.Models.Appointment

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Randevu Sil";
}

<h2 class="text-center mb-4">Randevu Sil</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm border-danger" style="width: 24rem;">
        <div class="card-body text-center">
            <h5 class="card-title text-danger">Silme İşlemini Onayla</h5>
            <hr />
            <p>
                <strong>@Model.Service?.Name</strong> adlı servis için<br />
                <strong>@Model.Time?.Date.ToShortDateString() [@Model.Time?.StartTime - @Model.Time?.EndTime]</strong>
                tarih/saatli randevuyu silmek istediğinizden emin misiniz?
            </p>
            <p class="text-muted">Bu işlem geri alınamaz.</p>
            <form asp-action="Delete">
                <input type="hidden" asp-for="AppointmentId" />
                <div class="d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-danger btn-sm me-2">Sil</button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Geri</a>
                </div>
            </form>
        </div>
    </div>
</div>
