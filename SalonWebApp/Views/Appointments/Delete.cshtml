@model SalonWebApp.Models.Appointment

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Randevu Sil";
}

<h2 class="text-center text-danger mb-4">Randevu Sil</h2>

<div class="d-flex justify-content-center">
    <div class="card shadow-lg border-danger" style="width: 30rem;">
        <div class="card-body text-center">
            <h5 class="card-title text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> Silme İşlemini Onayla
            </h5>
            <hr />
            <p class="mt-3">
                <strong>@Model.Service?.Name</strong> adlı servis için<br />
                <strong>@Model.Time?.Date.ToShortDateString() [@Model.Time?.StartTime - @Model.Time?.EndTime]</strong>
                tarih/saatli randevuyu silmek istediğinizden emin misiniz?
            </p>
            <p class="text-muted">Bu işlem geri alınamaz.</p>
            <form asp-action="Delete">
                <input type="hidden" asp-for="AppointmentId" />
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-danger btn-sm me-2">
                        <i class="bi bi-trash-fill"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> Geri
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
