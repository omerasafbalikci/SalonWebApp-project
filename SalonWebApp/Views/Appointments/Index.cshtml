@model IEnumerable<SalonWebApp.Models.Appointment>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Randevular";
}

<h1>Randevular</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Oluştur</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı (Email)</th>
            <th>Salon</th>
            <th>Servis</th>
            <th>Çalışan</th>
            <th>Saat</th>
            <th>Açıklama</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User?.Email</td>
                <td>@item.Salon?.Name</td>
                <td>@item.Service?.Name</td>
                <td>@item.Employee?.FirstName @item.Employee?.LastName</td>
                <td>
                    @item.Time?.Date.ToString("dd.MM.yyyy")
                    [@item.Time?.StartTime] - [@item.Time?.EndTime]
                </td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
