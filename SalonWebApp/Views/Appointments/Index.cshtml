@model IEnumerable<SalonWebApp.Models.Appointment>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Randevular";
}

<h2>Randevular</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Oluştur</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Salon</th>
            <th>Servis</th>
            <th>Çalışan</th>
            <th>Tarih/Saat</th>
            <th>Açıklama</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.User?.Email</td>
                <td>@appointment.Salon?.Name</td>
                <td>@appointment.Service?.Name</td>
                <td>@appointment.Employee?.FirstName @appointment.Employee?.LastName</td>
                <td>
                    @appointment.Time?.Date.ToShortDateString()
                    [@appointment.Time?.StartTime - @appointment.Time?.EndTime]
                </td>
                <td>@appointment.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-warning ms-1">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-danger ms-1">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
