@model SalonWebApp.Models.Appointment

@{
    Layout = User.IsInRole("Admin")
        ? "~/Views/Shared/_LayoutAdmin.cshtml"
        : "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Randevu Oluştur";
}

<h2>Randevu Oluştur</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Salon -->
            <div class="mb-3">
                <label for="SalonId" class="form-label">Salon</label>
                <select asp-for="SalonId" class="form-select" asp-items="ViewBag.Salons"></select>
            </div>

            <!-- Service -->
            <div class="mb-3">
                <label for="ServiceId" class="form-label">Servis</label>
                <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.Services"></select>
            </div>

            <!-- Employee -->
            <div class="mb-3">
                <label for="EmployeeId" class="form-label">Çalışan</label>
                <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.Employees"></select>
            </div>

            <!-- Time -->
            <div class="mb-3">
                <label for="TimeId" class="form-label">Zaman Dilimi</label>
                <select asp-for="TimeId" class="form-select" asp-items="ViewBag.Times"></select>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    @* partial vs render partial, 
       Duplicate check: use PartialAsync if you want to do @await or code block for RenderPartialAsync *@
    @{
        await Html.PartialAsync("_ValidationScriptsPartial");
    }
}
