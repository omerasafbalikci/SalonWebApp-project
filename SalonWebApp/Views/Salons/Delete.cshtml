@model SalonWebApp.Models.Salon

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Salon Sil";
}

<h2 class="text-center text-danger">Salon Sil</h2>
<hr />

<div class="card shadow-lg border-danger">
    <div class="card-body text-center">
        <h4 class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Dikkat!</h4>
        <p>
            <strong>@Model.Name</strong> adlı salonu silmek üzeresiniz. Bu işlem geri alınamaz.
        </p>
        <p>Silme işlemini onaylamak için "Sil" butonuna basın ya da "İptal" ile geri dönün.</p>
    </div>
</div>

<form asp-action="Delete" class="text-center mt-4">
    <input type="hidden" asp-for="SalonId" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-trash-fill"></i> Sil
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> İptal
    </a>
</form>
