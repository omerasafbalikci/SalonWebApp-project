@model SalonWebApp.Models.Salon

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Salon Düzenle";
}

<h2>Salon Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalonId" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Salon Adı</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Type" class="form-label">Tür</label>
                <select asp-for="Type" class="form-select">
                    <option value="Hairdresser">Kuaför (Bayan)</option>
                    <option value="Barber">Berber (Erkek)</option>
                    <option value="Mixed">Karma</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="OpenDays" class="form-label">Açık Günler</label>
                <input asp-for="OpenDays" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="OpeningHour" class="form-label">Açılış Saati</label>
                <input asp-for="OpeningHour" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="ClosingHour" class="form-label">Kapanış Saati</label>
                <input asp-for="ClosingHour" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Adres</label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
