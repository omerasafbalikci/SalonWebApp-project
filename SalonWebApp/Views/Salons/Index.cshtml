@model IEnumerable<SalonWebApp.Models.Salon>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Salon Listesi";
}

<h2>Salon Listesi</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Türü</th>
            <th>Adres</th>
            <th>Telefon</th>
            <th>Çalışma Saatleri</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Name</td>
                <td>@salon.Type</td>
                <td>@salon.Address</td>
                <td>@salon.Phone</td>
                <td>@salon.OpeningHour - @salon.ClosingHour</td>
                <td>
                    <a asp-action="Details" asp-route-id="@salon.SalonId" class="btn btn-info btn-sm">Detay</a>

                    @if (User.IsInRole("ADMIN"))
                    {
                        <a asp-action="Edit" asp-route-id="@salon.SalonId" class="btn btn-warning btn-sm ms-1">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@salon.SalonId" class="btn btn-danger btn-sm ms-1">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("ADMIN"))
{
    <a asp-action="Create" class="btn btn-primary">Yeni Salon Ekle</a>
}
