@model IEnumerable<SalonWebApp.Models.WorkingDay>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışma Günleri";
}

<h2>Çalışma Günleri</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Çalışma Günü Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Çalışan</th>
            <th>Tarih</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Employee != null ? item.Employee.FirstName + " " + item.Employee.LastName : "N/A")</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.StartTime</td>
                <td>@item.EndTime</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.WorkingDayId" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.WorkingDayId" class="btn btn-warning btn-sm ms-1">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.WorkingDayId" class="btn btn-danger btn-sm ms-1">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
