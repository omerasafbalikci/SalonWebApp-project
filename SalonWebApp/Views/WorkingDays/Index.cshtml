@model IEnumerable<SalonWebApp.Models.WorkingDay>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışma Günleri";
}

<h2 class="text-center">Çalışma Günleri</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="table-responsive" style="width: 90%; max-width: 1200px;">
        <table class="table table-bordered table-hover table-sm text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Çalışan</th>
                    <th>Tarih</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(item.Employee != null ? item.Employee.FirstName + " " + item.Employee.LastName : "N/A")</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.StartTime</td>
                        <td>@item.EndTime</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a asp-action="Details" asp-route-id="@item.WorkingDayId" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-info-circle"></i> Detay
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.WorkingDayId" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.WorkingDayId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-center mt-3">
    <a asp-action="Create" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i> Yeni Çalışma Günü Ekle
    </a>
</div>
