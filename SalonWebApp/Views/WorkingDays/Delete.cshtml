@model SalonWebApp.Models.WorkingDay

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışma Günü Sil";
}

<h2>Çalışma Günü Sil</h2>
<hr />

<div class="alert alert-danger">
    <p>
        <strong>@(Model.Employee != null ? Model.Employee.FirstName + " " + Model.Employee.LastName : "N/A")</strong>
        adlı çalışanın
        <strong>@Model.Date.ToShortDateString()</strong> tarihli
        <strong>@Model.StartTime - @Model.EndTime</strong> çalışma gününü silmek istediğinizden emin misiniz?
    </p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="WorkingDayId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri</a>
</form>
