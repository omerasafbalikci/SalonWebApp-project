@model SalonWebApp.Models.WorkingDay

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışma Günü Sil";
}

<h2 class="text-center text-danger">Çalışma Günü Sil</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card shadow-lg border-danger" style="width: 40%; min-width: 350px;">
        <div class="card-body text-center">
            <h4 class="text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> Dikkat!
            </h4>
            <p class="card-text mt-3">
                <strong>@(Model.Employee != null ? Model.Employee.FirstName + " " + Model.Employee.LastName : "N/A")</strong> adlı çalışanın
                <strong>@Model.Date.ToShortDateString()</strong> tarihli
                <strong>@Model.StartTime - @Model.EndTime</strong> çalışma gününü silmek üzeresiniz. Bu işlem geri alınamaz!
            </p>
        </div>
    </div>
</div>

<form asp-action="Delete" class="d-flex justify-content-center mt-4">
    <input type="hidden" asp-for="WorkingDayId" />
    <button type="submit" class="btn btn-danger btn-sm me-2">
        <i class="bi bi-trash-fill"></i> Sil
    </button>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="bi bi-arrow-left-circle"></i> Geri
    </a>
</form>
