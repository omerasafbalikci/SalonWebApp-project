@model SalonWebApp.Models.WorkingDay

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışma Günü Düzenle";
}

<h2>Çalışma Günü Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="WorkingDayId" />

            <!-- Çalışan -->
            <div class="mb-3">
                <label for="EmployeeId" class="form-label">Çalışan</label>
                <select asp-for="EmployeeId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "FirstName", Model.EmployeeId))">
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <!-- Tarih -->
            <div class="mb-3">
                <label asp-for="Date" class="form-label">Tarih</label>
                <input asp-for="Date" class="form-control" />
            </div>

            <!-- StartTime -->
            <div class="mb-3">
                <label asp-for="StartTime" class="form-label">Başlangıç Saati</label>
                <input asp-for="StartTime" class="form-control" />
            </div>

            <!-- EndTime -->
            <div class="mb-3">
                <label asp-for="EndTime" class="form-label">Bitiş Saati</label>
                <input asp-for="EndTime" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
