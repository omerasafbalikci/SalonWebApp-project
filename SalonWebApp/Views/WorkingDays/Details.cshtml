@model SalonWebApp.Models.WorkingDay

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışma Günü Detayı";
}

<h2>Çalışma Günü Detayı</h2>
<hr />

<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            @(Model.Employee != null ? (Model.Employee.FirstName + " " + Model.Employee.LastName) : "N/A")
        </h4>
        <p class="card-text">
            <strong>Tarih:</strong> @Model.Date.ToShortDateString() <br />
            <strong>Başlangıç:</strong> @Model.StartTime <br />
            <strong>Bitiş:</strong> @Model.EndTime
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.WorkingDayId" class="btn btn-warning">Düzenle</a>
    <a asp-action="Delete" asp-route-id="@Model.WorkingDayId" class="btn btn-danger ms-2">Sil</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Liste</a>
</div>
