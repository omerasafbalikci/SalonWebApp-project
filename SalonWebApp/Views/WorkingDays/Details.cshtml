@model SalonWebApp.Models.WorkingDay

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Çalışma Günü Detayı";
}

<h2 class="text-center text-primary">Çalışma Günü Detayı</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 40%; min-width: 350px;">
        <div class="card-body text-center">
            <h4 class="card-title text-primary">
                @(Model.Employee != null ? (Model.Employee.FirstName + " " + Model.Employee.LastName) : "N/A")
            </h4>
            <p class="card-text mt-3">
                <strong>Tarih:</strong> @Model.Date.ToShortDateString() <br />
                <strong>Başlangıç:</strong> @Model.StartTime <br />
                <strong>Bitiş:</strong> @Model.EndTime
            </p>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model.WorkingDayId" class="btn btn-warning btn-sm me-2">
        <i class="bi bi-pencil-square"></i> Düzenle
    </a>
    <a asp-action="Delete" asp-route-id="@Model.WorkingDayId" class="btn btn-danger btn-sm me-2">
        <i class="bi bi-trash-fill"></i> Sil
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">
        <i class="bi bi-list"></i> Liste
    </a>
</div>
